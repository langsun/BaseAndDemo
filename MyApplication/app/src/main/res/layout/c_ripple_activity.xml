<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.sun.demo.demo.C_RippleView
        android:id="@+id/c_ripple_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_text"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="#00acff"
            android:text="C_RippleView" />
    </com.example.sun.demo.demo.C_RippleView>

    <com.example.sun.demo.demo.C_OptionItemView
        android:id="@+id/c_option_item_view"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.sun.demo.demo.C_OptionItemView>
    <com.example.sun.demo.demo.C_OptionItemView
        android:id="@+id/c_option_item_view2"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.sun.demo.demo.C_OptionItemView>

    <com.example.sun.demo.demo.C_OptionItemView
        android:id="@+id/c_option_item_view3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.sun.demo.demo.C_OptionItemView>
    <com.example.sun.demo.demo.C_OptionItemView
        android:id="@+id/c_option_item_view4"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.sun.demo.demo.C_OptionItemView>
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="textview"
        android:background="#00acff"/>
</LinearLayout>
